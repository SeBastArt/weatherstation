FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR src
COPY ["src/ThingsApi/ThingsApi.csproj", "ThingsApi/"]
COPY ["src/Application/Application.csproj", "Application/"]
RUN ls -la
RUN dotnet restore "ThingsApi/ThingsApi.csproj"

COPY ["src/ThingsApi", "ThingsApi/"]
COPY ["src/Application", "Application/"]
RUN dotnet build "ThingsApi/ThingsApi.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "ThingsApi/ThingsApi.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "InputApi.dll"]